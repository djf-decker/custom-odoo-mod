<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="spaceship_gen_view_tree" model="ir.ui.view">
        <field name="name">spaceship.gen.views</field>
        <field name="model">spaceship.gen</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field width="25%" name="spaceship_mfg_model" string="Spaceship Manufacturer Model"/>
                <field width="25%" name="spaceship_mfg_date"  string="Date of Manufacture"/>
                <field width="25%" name="lightspeed_capable"  string="Has Lightspeed Capability"/>
                <field width="25%" name="planet_of_origin"    string="Planet of Origin"/>
            </tree>
        </field>
    </record>

    <record id="spaceship_gen_view_form" model="ir.ui.view">
        <field name="name">spaceship.gen.views</field>
        <field name="model">spaceship.gen</field>
        <field name="arch" type="xml">
            <form string="New Spaceship :)">
                <sheet>
                    <group>
                        <field name="spaceship_mfg_model" string="Spaceship Manufacturer Model"/>
                        <field name="spaceship_mfg_date"  string="Date of Manufacture"/>
                        <field name="lightspeed_capable"  string="Has Lightspeed Capability"/>
                        <field name="planet_of_origin"    string="Planet of Origin"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
